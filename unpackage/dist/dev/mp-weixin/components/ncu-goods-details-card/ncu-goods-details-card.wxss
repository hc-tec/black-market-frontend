.ncu-goods-details-card {
  padding-bottom: -50px;
  background-color: var(--main-bg-color);
}
.ncu-goods-details-card-main {
  width: 90%;
  margin: 0 auto;
  max-height: 70%;
  padding: 0 15px 10px 15px;
  box-shadow: var(--goods-card-shadow);
  border-radius: 10px;
  position: relative;
  top: -50px;
}
.ncu-goods-details-card-operate {
  width: 100%;
  position: absolute;
  bottom: 0;
  padding: 0 15px 0 30px;
  height: 55px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.ncu-goods-details-card__img {
  width: 100%;
  max-height: 600px;
}
.ncu-goods-details-card__title {
  font-weight: 700;
  padding: 10px 0 3px 0;
  font-size: .9em;
}
.ncu-goods-details-card__price {
  font-weight: bold;
  font-size: 1.1rem;
  color: #ff5000;
}
.ncu-goods-details-card__price .cuIcon-moneybag {
  font-size: .8rem;
}
.ncu-goods-details-card__operation {
  display: flex;
  align-items: center;
}
.ncu-goods-details-card-content {
  padding-bottom: 10px;
  position: relative;
  max-height: 100px;
  overflow: auto;
  color: var(--main-light-color);
  font-size: .6em;
}
.ncu-goods-details-card-content__launch-time {
  margin: 0 3px;
}
.ncu-goods-details-card-content__tag-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.self-goods {
  font-size: .8em;
  color: var(--main-light-color);
}

