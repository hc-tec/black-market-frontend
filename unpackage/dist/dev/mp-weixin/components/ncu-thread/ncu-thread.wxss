.ncu-thread {
  width: 90%;
  margin: 0 auto;
  margin-bottom: 10px;
  transition: all .3;
}
.ncu-thread-content {
  padding-bottom: 2.75rem;
  padding-top: 75px;
  position: relative;
  width: 100%;
  height: 100%;
}
.ncu-thread-content::before {
  width: 108%;
  height: 65%;
  border-radius: 15px;
  box-shadow: 0 20px 50px rgba(216, 186, 186, 0.1);
  content: '';
  position: absolute;
  top: 0;
  left: -4%;
  background-color: var(--main-bg-color);
  background-image: var(--thread-bg-image);
  background-size: contain;
  z-index: -1;
}
.ncu-thread-content__btn-group {
  display: flex;
  align-items: center;
  right: -8px;
  position: absolute;
  top: -7px;
  color: var(--main-light-color);
  font-size: .9em;
}
.ncu-thread-content__btn-group .report {
  position: relative;
  left: 19px;
}
.ncu-thread-content__btn-group .comment-num {
  position: relative;
  left: 30px;
  display: flex;
  align-items: center;
}
.ncu-thread-content__btn-group [class*=ncu-appreciate__num] {
  font-size: 1.3em;
}
.ncu-thread-content__btn-group [class*=cuIcon] {
  font-size: 1.3em;
  margin-right: 5px;
}

